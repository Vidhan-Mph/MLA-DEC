<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
	
	<bean id = "ord1" class="com.test.Order1" autowire-candidate="default" >
		
		<property name = "id" value = "1" ></property>
		<property name = "name" value = "Creatine"></property>
		<property name = "price" value="2000"></property>
	</bean>
	<bean id = "ord2" class="com.test.Order1" scope="singleton" >
		
		<property name = "id" value = "2" ></property>
		<property name = "name" value = "apple"></property>
		<property name = "price" value="150"></property>
	</bean>
	<bean id = "adr1" class="com.test.Address" scope="singleton" >
		
		<property name = "city" value = "Banglore" ></property>
		<property name = "state" value = "KA"></property>
	</bean>
		<bean id = "adr2" class="com.test.Address" scope="singleton" >
		
		<property name = "city" value = "Tirupati" ></property>
		<property name = "state" value = "AP"></property>
	</bean>
	
	
		<bean id="cst" class="com.test.Customer">
    <property name="id" value="111"/>
    <property name="name" value="Vidhan"/>
    <property name="orders">
        <list>
            <ref bean="ord1"/>
            <ref bean="ord2"/>
        </list>
    </property>
</bean>
<bean id="odr3" class="com.test.Order1">
		<constructor-arg name="id" value="3"></constructor-arg>
		<constructor-arg name="name" value="Fruits"></constructor-arg>
		<constructor-arg name="price" value="500"></constructor-arg>
	</bean>
 
	<bean id="adr3" class="com.test.Address">
		<constructor-arg name="city" value="Mumbai"></constructor-arg>
		<constructor-arg name="state" value="Maharashtra"></constructor-arg>
	</bean>
	
	<bean id="cst1" class="com.test.Customer" scope="singleton">
 
		<constructor-arg name="id" value="122"></constructor-arg>
		<constructor-arg name="name" value="jay"></constructor-arg>
		
		<constructor-arg name="address">
			<list>
				<ref bean="adr3" />
 
			</list>
 
 
		</constructor-arg>
		<constructor-arg name="orders">
			<list>
				<ref bean="odr3" />
 
			</list>
		</constructor-arg>
	</bean>	


 
</beans>
 
 